# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Universal settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, JSON, and configuration files
[*.{js,cjs,mjs,json,jsonc}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Package files
[package.json]
indent_style = space
indent_size = 2

# VS Code settings
[.vscode/*.json]
indent_style = space
indent_size = 2

# Git files
[.gitignore]
indent_style = space
indent_size = 2

# Text files
[*.txt]
insert_final_newline = true
trim_trailing_whitespace = true
